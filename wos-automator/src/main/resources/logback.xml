<!--            <maxHistory>5</maxHistory>-->
<!--            <totalSizeCap>50MB</totalSizeCap>-->
<!--        </rollingPolicy>-->
<!--    </appender>-->

    <!-- Package-specific logger levels -->
    <logger name="dev.fidgetcode.bot.main" level="INFO"/>
    <logger name="dev.fidgetcode.bot.emulator" level="INFO"/>
    <logger name="dev.fidgetcode.bot.serv.task" level="INFO"/>
    <logger name="dev.fidgetcode.bot.launcher" level="INFO"/>

    <!-- Debug levels for specific components -->
    <logger name="dev.fidgetcode.bot.emulator.impl" level="DEBUG"/>
    <logger name="dev.fidgetcode.bot.serv.task.TaskQueue" level="DEBUG"/>

    <!-- Suppress verbose logging from third-party libraries -->
    <logger name="com.android.ddmlib" level="WARN"/>
    <logger name="org.hibernate" level="ERROR"/>
    <logger name="javafx" level="ERROR"/>
    <logger name="com.zaxxer.hikari" level="ERROR"/>
    <logger name="com.sun.javafx" level="ERROR"/>
    <logger name="javax.persistence" level="ERROR"/>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
<!--        <appender-ref ref="FILE" />-->
    </root>
</configuration>
